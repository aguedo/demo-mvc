@{
    ViewData["Title"] = "Snack Home";
}

<div class="mt-5 text-center">
    <h4 class=" mt-6 text-primary">... your snack!</h4>
    <div class="card mt-4 bg-dark text-white">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@ViewBag.ChuckNorrisJoke</p>
                <footer class="blockquote-footer text-white-50"><cite title="Source Title">Chuck Norris</cite>
                </footer>
            </blockquote>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@ViewBag.AdviceSlip</p>
                <footer class="blockquote-footer"><cite title="Source Title">advice</cite>
                </footer>
            </blockquote>
        </div>
    </div>
    <div class="card mt-4 bg-dark text-white">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@ViewBag.UselessFact</p>
                <footer class="blockquote-footer text-white-50"><cite title="Source Title">useless fact</cite>
                </footer>
            </blockquote>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p style="margin-bottom: 0;">- @ViewBag.OfficialJoke.Setup</p>
                <p style="margin-top: 2px;">- @ViewBag.OfficialJoke.Punchline</p>
                <footer class="blockquote-footer" style="margin-top: 4px;"><cite title="Source Title">another
                        joke?</cite>
                </footer>
            </blockquote>
        </div>
    </div>
</div>